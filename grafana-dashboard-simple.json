{
  "dashboard": {
    "title": "Hutech-Edu Monitoring",
    "tags": ["hutech-edu", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "graph",
        "title": "HTTP Requests per Second",
        "targets": [
          {
            "expr": "rate(hutech_edu_http_requests_total[1m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "graph",
        "title": "Average Response Time",
        "targets": [
          {
            "expr": "rate(hutech_edu_http_request_duration_ms_sum[5m]) / rate(hutech_edu_http_request_duration_ms_count[5m])",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "Response Time" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
        "type": "stat",
        "title": "Total Requests",
        "targets": [
          {
            "expr": "sum(hutech_edu_http_requests_total)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
        "type": "stat",
        "title": "Active Users",
        "targets": [
          {
            "expr": "hutech_edu_active_users",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
        "type": "stat",
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "hutech_edu_cache_hit_rate",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "percent"
        }
      }
    ],
    "schemaVersion": 36,
    "version": 0
  },
  "overwrite": true
}
